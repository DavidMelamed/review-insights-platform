# Database
DB_USER=reviewinsights
DB_PASSWORD=your-secure-password
DB_NAME=reviewinsights
DATABASE_URL=postgresql://reviewinsights:your-secure-password@localhost:5432/reviewinsights

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Authentication
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d

# API Keys
OPENAI_API_KEY=your-openai-api-key
DATAFORSEO_API_KEY=your-dataforseo-api-key
GOOGLE_PLACES_API_KEY=your-google-places-api-key

# Email
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@reviewinsights.ai

# Slack Integration
SLACK_BOT_TOKEN=your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# Stripe
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Social Media APIs
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token

# Application
NODE_ENV=production
PORT=3001
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001

# Storage
STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=reviewinsights-uploads

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Feature Flags
ENABLE_AI_RESPONSES=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_WHITE_LABEL=true
ENABLE_ZERO_CONFIG=true